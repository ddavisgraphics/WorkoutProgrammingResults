<div class="mdc-login-container">
  <div class="mdc-login-card mdc-card">
    <div class="mdc-login-header">
      <h2 class="mdc-typography--headline4">
        Create your account
      </h2>
      <p class="mdc-typography--body2">
        Start your fitness journey today
      </p>
    </div>

    <div class="mdc-login-form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mdc-text-field mdc-text-field--outlined mdc-text-field--with-trailing-icon w-full mb-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mdc-text-field__input", required: true %>
          <span class="mdc-notched-outline">
            <span class="mdc-notched-outline__leading"></span>
            <span class="mdc-notched-outline__notch">
              <span class="mdc-floating-label">Email</span>
            </span>
            <span class="mdc-notched-outline__trailing"></span>
          </span>
          <i class="material-icons mdc-text-field__icon mdc-text-field__icon--trailing">email</i>
        </div>

        <div class="mdc-text-field mdc-text-field--outlined mdc-text-field--with-trailing-icon w-full mb-4">
          <%= f.password_field :password, autocomplete: "new-password", class: "mdc-text-field__input", required: true %>
          <span class="mdc-notched-outline">
            <span class="mdc-notched-outline__leading"></span>
            <span class="mdc-notched-outline__notch">
              <span class="mdc-floating-label">Password <% if @minimum_password_length %><small>(<%= @minimum_password_length %> characters min)</small><% end %></span>
            </span>
            <span class="mdc-notched-outline__trailing"></span>
          </span>
          <i class="material-icons mdc-text-field__icon mdc-text-field__icon--trailing">lock</i>
        </div>

        <div class="mdc-text-field mdc-text-field--outlined mdc-text-field--with-trailing-icon w-full mb-4">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mdc-text-field__input", required: true %>
          <span class="mdc-notched-outline">
            <span class="mdc-notched-outline__leading"></span>
            <span class="mdc-notched-outline__notch">
              <span class="mdc-floating-label">Confirm Password</span>
            </span>
            <span class="mdc-notched-outline__trailing"></span>
          </span>
          <i class="material-icons mdc-text-field__icon mdc-text-field__icon--trailing">lock_outline</i>
        </div>

        <button type="submit" class="mdc-button mdc-button--raised w-full mb-4">
          <span class="mdc-button__ripple"></span>
          <i class="material-icons mdc-button__icon" aria-hidden="true">person_add</i>
          <span class="mdc-button__label">Sign up</span>
        </button>
      <% end %>

      <div class="mdc-login-footer">
        <div class="text-center">
          <span class="mdc-typography--body2">Already have an account?</span>
          <%= link_to "Log in", new_session_path(resource_name), class: "ml-1 font-medium text-primary hover:text-primary-dark" %>
        </div>

        <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
          <div class="text-center mt-2">
            <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-sm font-medium text-primary hover:text-primary-dark" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
